# Patent + Innovation Radar: Environment Configuration

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/patent_radar

# Qdrant Vector Store
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=qdrant_key_123

# Neo4j Graph DB
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# MinIO S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Redis
REDIS_URL=redis://localhost:6379

# PatentsView API
PATENTSVIEW_API_KEY=your_api_key_here
PATENTSVIEW_BATCH_SIZE=1000

# Observability
LOG_LEVEL=INFO
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# API
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Auth
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=password

# Anthropic Claude API (for agent)
ANTHROPIC_API_KEY=sk-ant-...

# Feature flags
ENABLE_EMBEDDINGS=true
ENABLE_TOPIC_MODELING=true
ENABLE_NOVELTY_SCORING=true
ENABLE_ALERTS=true
